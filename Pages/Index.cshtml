@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<!-- Hero Section -->
<section class="bg-light py-5 text-center">
    <div class="container">
        <h1 class="display-4 mb-3">🔐 Identity Portal</h1>
        <p class="lead text-muted">
            A secure, role-based authentication system built with ASP.NET Core Identity and Razor Pages.
        </p>
        @if (!User.Identity?.IsAuthenticated ?? true)
        {
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-lg me-2">Get Started</a>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg">Log In</a>
        }
        else
        {
            <a asp-page="/Admin/Index" class="btn btn-primary btn-lg">Go to Dashboard</a>
        }
    </div>
</section>

<!-- Features Section -->
<section class="container py-5">
    <h2 class="text-center mb-4">🔥 Core Features</h2>
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🔑 Authentication</h5>
                    <p class="card-text text-muted">
                        Secure login, registration, and password reset built with Identity and EF Core.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🛡️ Role Management</h5>
                    <p class="card-text text-muted">
                        Fine-tuned access control with Admin/User roles and protected Razor Pages.
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">🎨 Custom UI</h5>
                    <p class="card-text text-muted">
                        Clean, responsive Bootstrap styling for login, registration, and admin views.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Tech Stack Section -->
<section class="bg-light py-5">
    <div class="container">
        <h2 class="text-center mb-4">⚙️ Tech Stack</h2>
        <div class="row justify-content-center text-center">
            <div class="col-md-2 mb-3"><span class="badge bg-primary">ASP.NET Core 9.0</span></div>
            <div class="col-md-2 mb-3"><span class="badge bg-dark">Razor Pages</span></div>
            <div class="col-md-2 mb-3"><span class="badge bg-secondary">EF Core</span></div>
            <div class="col-md-2 mb-3"><span class="badge bg-success">Bootstrap 5</span></div>
            <div class="col-md-2 mb-3"><span class="badge bg-info text-dark">Docker (optional)</span></div>
        </div>
    </div>
</section>

<!-- Footer -->
<footer class="text-center text-muted py-4">
    Built with 💻 by Code-Vine using ASP.NET Core + Identity
</footer>
